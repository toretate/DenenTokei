<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="?android:attr/actionBarSize"
    tools:context="com.toretate.denentokei.MainActivity"
    >
    

	<TableLayout
	    android:id="@+id/mainTable"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    >

		<TextView
		    android:id="@+id/textView1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/settings_main_info" />

	    <TableRow
	        android:id="@+id/tableRow3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/princeLv"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	
	        <Button
	            android:id="@+id/princeLvSpinner"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" />
	
	    </TableRow>
	    
		<TextView
		    android:id="@+id/infoToWidget"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="12dp"
		    android:text="ホーム画面にウィジェットを登録すると、下図のようなウィジェットができます。\nホーム画面へのウィジェット登録方法については" />
		<Button
		    android:id="@+id/showGoogle"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="Googleで「ホームにウィジェット登録」検索"
		    />

	</TableLayout>
	
<RelativeLayout
    android:id="@+id/widget_surface"
    android:layout_width="220dp"
    android:layout_height="110dp"
    android:layout_below="@id/mainTable"
    android:layout_centerHorizontal="true"
    android:background="#88000000"
    android:padding="@dimen/widget_margin"
    android:layout_marginTop="12dp"
    >

    <ImageView 
        android:id="@+id/setting_skin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/panel_2x1"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:contentDescription="@string/clockBackgroundDescription"
        />
    <ImageButton 
        android:id="@+id/setting_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:background="#00000000"
        android:src="@drawable/setting_icon"
        android:contentDescription="@string/clockSetting"
        />

   	<LinearLayout
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_centerHorizontal="true"
   	    android:layout_centerVertical="true"
   	    android:orientation="vertical" >

   	    <LinearLayout
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:layout_gravity="center_horizontal"
   	        android:orientation="horizontal"
   	        >
			<TextView
   	        	android:id="@+id/staminaClock"
   	        	style="@style/font_2x1_normal"
   	        	android:layout_width="wrap_content"
   	        	android:layout_height="wrap_content"
   	        	android:text="10/12" />
			<TextView
   	        	android:id="@+id/staminaClockSub"
   	        	style="@style/font_2x1_small"
   	        	android:layout_width="wrap_content"
   	        	android:layout_height="wrap_content"
   	        	android:layout_marginLeft="4dp"
   	        	android:text="後15分" />
		</LinearLayout>
		
   	    <TextView
   	        android:id="@+id/charismaClock"
   	        style="@style/font_2x1_normal"
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:layout_gravity="center_horizontal"
   	        android:text="158/328" />

   	    	</LinearLayout>
    
 </RelativeLayout>
	
	<!-- 広告枠 -->
	<com.google.android.gms.ads.AdView
	    xmlns:ads="http://schemas.android.com/apk/res-auto"
	    android:id="@+id/adView"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    ads:adUnitId="ca-app-pub-9826001641330476/3343091144"
	    ads:adSize="BANNER" />
</RelativeLayout>

