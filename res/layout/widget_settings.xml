<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="?android:attr/actionBarSize"
    tools:context="com.toretate.denentokei.MainActivity"
    >
    

	<TableLayout
	    android:id="@+id/widgetSettingsTable"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_alignParentTop="true"
	    android:layout_above="@+id/saveButton"
	    android:stretchColumns="1"
	    >

	    <!-- 王子Lv行 -->
	    <TableRow
	        android:id="@+id/tableRow3"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	
		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        >
	        	<TextView
		            android:id="@+id/textView3"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/princeLv"
		            android:textAppearance="?android:attr/textAppearanceMedium" />
		
		        <Button
		            android:id="@+id/princeLvSpinner"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout />
	    </TableRow>

	    <!-- スタミナ行 -->
		<TableRow
		    android:id="@+id/tableRow2"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >
		
		    <LinearLayout
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="3"
		        >
			    <TextView
			        android:id="@+id/staminaLabel"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/stamina"
			        android:textAppearance="?android:attr/textAppearanceMedium"
			        />
			
			    <Button
			        android:id="@+id/stamina"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
					/>
			
			    <TextView
			        android:id="@+id/staminaMax"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/time_denominator_3"
			        android:textAppearance="?android:attr/textAppearanceMedium"
			        />
		    </LinearLayout>
		    <LinearLayout
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="2"
		        >
			    <TextView
			        android:id="@+id/staminaSubLabel"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:paddingLeft="4dp"
			        android:text="@string/next"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
			
			    <Button
			        android:id="@+id/staminaSub"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
				/>
   		    </LinearLayout>		
		</TableRow>

		<!-- カリスマ行 -->
		<TableRow
		    android:id="@+id/tableRow1"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >
		
		    <LinearLayout>
			    <TextView
			        android:id="@+id/charismaLabel"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/charisma"
			        android:textAppearance="?android:attr/textAppearanceMedium"
			        />
			
			    <Button
			        android:id="@+id/charisma"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
					/>
			
			    <TextView
			        android:id="@+id/charismaMax"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/time_denominator_3"
			        android:textAppearance="?android:attr/textAppearanceMedium"
			        />
		    </LinearLayout>
		    <LinearLayout />
		
		</TableRow>
		
		<!-- カリスタプリセット -->
		<TableRow
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    >
		    <ListView
				android:id="@+id/presetListView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_span="2"
				tools:listitem="@android:layout/preset_cha_sta_listitem"
		        >
		        
		    </ListView>
		</TableRow>
    
	</TableLayout>
	
	<!-- 保存ボタン -->
	<Button
	    android:id="@+id/saveButton"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/save"
	    android:layout_above="@+id/adView"
    />
			
	<!-- 広告枠 -->
	<com.google.android.gms.ads.AdView
	    xmlns:ads="http://schemas.android.com/apk/res-auto"
	    android:id="@+id/adView"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    ads:adUnitId="ca-app-pub-9826001641330476/3343091144"
	    ads:adSize="BANNER" />
</RelativeLayout>

